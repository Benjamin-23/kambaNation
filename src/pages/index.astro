---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="hero-bg h-screen">
			<div class="flex justify-between mx-2 items-center">
				<div class="flex gap-2">
					<img
						src="/assest/images/logo.svg"
						alt="loading"
						class="w-16 mt-4"
					/>
					<img
						src="/assest/images/cName.svg"
						alt="loading"
						class="w-10 mt-4"
					/>
				</div>
				<div class="">
					<img
						src="/assest/images/Hamburger-Button.svg"
						alt="loading"
						class="mt-4"
					/>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style scoped>
	.hero-bg {
		background-image: url("/assest/images/bacgroundMd.svg");
		background-repeat: no-repeat;
		/* width: 100%; */
	}
</style>
